<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
	<groupId>gov.usgs.cida</groupId>
	<artifactId>aquarius-domain</artifactId>
    <version>17.1.96-5-SNAPSHOT</version>    
	<packaging>jar</packaging>
	<name>Aquarius Domain</name>
	<description> 
		Domain objects autogenerated from Aquarius's Swagger Documentation
	</description>

    <build>
        <plugins>
            <plugin>
                <groupId>io.swagger</groupId>
                <artifactId>swagger-codegen-maven-plugin</artifactId>
                <version>${swagger-codegen-version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${aq.host}</inputSpec>
                            <language>jaxrs-cxf-client</language>
                            <useJaxbAnnotations>true</useJaxbAnnotations>
                            <useXml>true</useXml>
                            <configOptions>
                                <useJaxbAnnotations>true</useJaxbAnnotations>
                                <useXml>true</useXml>
                                <sourceFolder>src/main/java</sourceFolder>
                                <dateLibrary>java8</dateLibrary>
                            </configOptions>
                            <hideGenerationTimestamp>true</hideGenerationTimestamp>
                            <importMappings>
                                <param>IDictionaryStringObject=java.util.Map</param>
                                <param>Object=java.lang.Object</param>
                                <param>BigDecimal=java.math.BigDecimal</param>
                                <param>Double=java.math.BigDecimal</param>
                                <param>LongInteger=java.math.BigDecimal</param>
                                <param>Temporal=java.time.temporal.Temporal</param>
                                <param>DateTime=java.time.temporal.Temporal</param>
                                <param>DateTimeOffset=java.time.temporal.Temporal</param>
                                <param>Instant=java.time.Instant</param>
                            </importMappings>
                            <typeMappings>
                                <param>IDictionaryStringObject=Map&lt;String,java.lang.Object&gt;</param>
                                <param>LongInteger=java.math.BigDecimal</param>
                                <param>Double=java.math.BigDecimal</param>
                                <param>DateTime=Temporal</param>
                                <param>DateTimeOffset=Temporal</param>
                                <param>Offset=String</param>
                            </typeMappings>
                            <output>out</output>
                            <generateApiTests>false</generateApiTests>
                            <generateApis>false</generateApis>
                            <generateModelTests>false</generateModelTests>
                            <generateModelDocumentation>false</generateModelDocumentation>
                            <supportingFilesToGenerate>pom.xml</supportingFilesToGenerate>
                            <modelPackage>gov.usgs.cida.aquarius</modelPackage>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.2.1</version>
                <executions>
                <execution>
                    <id>attach-sources</id>
                    <goals>
                    <goal>jar-no-fork</goal>
                    </goals>
                </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>io.swagger</groupId>
            <artifactId>swagger-codegen</artifactId>
            <version>${swagger-codegen-version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>${gson-version}</version>
        </dependency>
    </dependencies>
    <properties>
        <aq.host>http://tsqa.nwis.usgs.gov/AQUARIUS/Publish/v2/resources</aq.host>
        <swagger-codegen-version>2.3.0.1-SNAPSHOT</swagger-codegen-version>
        <java.version>1.8</java.version>
        <gson-version>2.8.1</gson-version>
        <maven-plugin-version>1.0.0</maven-plugin-version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>


